    {
      "name": "10. Check Vehicle Warranty Status",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Check warranty status successful\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Warranty status present\", function () {",
              "    var jsonData = pm.response.json();",
